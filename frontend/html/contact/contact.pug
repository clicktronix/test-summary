//mixin
include ../../html/block-title/block-title

mixin contact(type1, type2, type3, type4)
    .contact
        +block-title('contact')
        table.contact__contact-table
            tr.paragraph
                th.contact__text-header address
                th.contact__description #{type1}
            tr.paragraph
                th.contact__text-header e-mail
                th.contact__description #{type2}
            tr.paragraph
                th.contact__text-header phone
                th.contact__description #{type3}
            tr.paragraph
                th.contact__text-header website
                th.contact__description #{type4}