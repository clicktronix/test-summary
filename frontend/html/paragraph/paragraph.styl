.paragraph
  margin-top 15px

  &__circle
    margin-left -32px
    margin-top 3px
    position absolute
    width 18px
    height 18px
    background #000000
    -moz-border-radius 50px
    -webkit-border-radius 50px
    border-radius 91px

  &__title
    margin 0

  &__text-header
    margin 0
    font-size 1.5rem
    overflow hidden
    color #3d6cb0
    text-transform uppercase

  &__date
    margin 0
    font-size 1.5rem
    font-weight 300
    @media screen and (max-width: 850px)
      font-size: 1rem

  &__description
    margin 0
    font-size 1rem
    padding-top 5px
    padding-bottom 3px