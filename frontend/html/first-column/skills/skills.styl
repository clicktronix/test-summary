.first-column__skills .g-subheader
  display flex
  justify-content center
  margin 0

.marks
  margin 0
  text-align center
  padding 15px

  &__mark
    display block
    width 16px
    height 16px
    border-radius 50%
    background #3d6cb0
    margin-right 6px

  &__mark-off
    background #e6e6e6

.marks li
  display inline-block