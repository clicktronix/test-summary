.first-column__frame
  display block
  width 100%
  text-align center
  text-transform uppercase

.first-column__frame svg
  width: 100%
  min-height 250px
  max-height 460px

.first-column__frame h1
  font-size 75px
  margin 0

.first-column__frame h2
  font-size 65px
  margin 0

.first-column__frame h4
  font-size 30px
  margin-top 0
  margin-bottom 100px

@media screen and (min-width: 300px) and (max-width: 850px)
  .first-column__frame svg
    width auto

  .first-column__frame h1
    font-size 55px

  .first-column__frame h2
    font-size 45px

  .first-column__frame h4
    font-size 15px
