@charset "UTF-8"

.bold
.block-title
.frame__user-surname
.frame__user-position
.paragraph__text-header
.contact__text-header
  font-family "MyriadProBold", "Eras Bold ITC", serif or sans

.light
.frame__user-name
  font-family "MyriadProLightSemiExtended_31641", "Eras Light ITC", serif or sans

.regular
.profile__text-about
.g-subheader
.description
.contact__description
.paragraph__date
.paragraph__description
  font-family "MyriadProRegular", "Eras Medium ITC", serif or sans

html
  height auto

body
  width 100%
  height auto
  margin 0

.g-container
  max-width 1200px
  margin 0 auto

.first-column
  width 35%
  float left
  @media screen and (max-width: 850px)
    width auto
    padding-left 10px
    padding-right 10px

.second-column
  margin-left 40%
  @media screen and (max-width: 850px)
    margin 0
    padding-left 10px
    padding-right 10px
    float left

.paragraph__text-header
  margin 0
  font-size 1.5rem
  overflow hidden
  color #3d6cb0
  text-transform uppercase

.g-subheader
  margin 0
  font-size 1.5rem
  text-transform uppercase
  font-weight 300

.block-title
  font-size 2.5rem
  overflow hidden
  color #3d6cb0
  background #fff
  text-transform uppercase
  margin-bottom 0
  vertical-align middle

.paragraph
  margin-top 15px

  &__circle
    margin-left -32px
    margin-top 3px
    position absolute
    width 18px
    height 18px
    background #000000
    -moz-border-radius 50px
    -webkit-border-radius 50px
    border-radius 9px

  &__title
  &__text-header
    margin 0

  &__date
    margin 0
    font-size 1.4rem
    font-weight 300
    @media screen and (max-width: 850px)
      font-size: 1rem

  &__description
    margin 0
    font-size 1rem
    padding-top 5px
    padding-bottom 3px

/*icons and lines*/
.icon
.block-title:before
  content ""
  display inline-block
  width 80px
  height 80px
  background require=(url(./img/sprite.png))no-repeat center center
  vertical-align middle
  margin-right 5px
  background-size cover
  background-origin border-box

.profile h3:before
  background-position 0 0

.contact h3:before
  background-position -93px 0

.skills h3:before
  background-position -192px 0

.education h3:before
  background-position -294px 0

.experience h3:before
  background-position -407px 0

.software h3:before
  background-position -512px 0

.line
.block-title:after
  display inline-block
  content ""
  height 5px
  width 45%
  vertical-align 23%
  background #3d6cb0
  margin-right -100%
  margin-left 15px
  @media screen and (max-width: 850px)
    display none

@import '../html/frame/frame.styl'
@import '../html/contact/contact.styl'
@import '../html/profile/profile.styl'
@import '../html/skills/skills.styl'
@import '../html/marks/marks.styl'
@import '../html/education/education.styl'
@import '../html/experience/experience.styl'
@import '../html/software/software.styl'
@import './fonts.styl'
